#include <bits/stdc++.h>
using namespace std;
#define ll long long;
int main()
{
 
    int t;
    cin >> t;
    while (t--)
    {
        int n;
        cin >> n;
        int p = n - 2;
        int t = p;
        if (p == 1)
        {
            string s;
            cin >> s;
            cout << s[0] << s[1] << s[1] << "\n";
        }
        else
        {
            vector<string> v;
            while (p--)
            {
                string s;
                cin >> s;
                v.push_back(s);
            }
 
            int cnt = 0;
            for (int i = 0; i <= v.size() - 2; i++)
            {
                string c = v[i];
                string n = v[i + 1];
                if (i == 0)
                {
                    cout << c[0];
                    cnt++;
                }
                if (c[1] == n[0])
                {
                    cout << c[1];
                    cnt++;
                }
                else
                {
                    cout << c[1] << n[0];
                    cnt += 2;
                }
                if (i == v.size() - 2)
                {
                    cout << n[1];
                    cnt++;
                }
            }
            if (cnt != n)
                cout << v[v.size() - 1][1];
            cout << "\n";
        }
    }
}